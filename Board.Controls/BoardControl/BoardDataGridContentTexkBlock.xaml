<UserControl x:Class="Board.Controls.BoardControl.BoardDataGridContentTexkBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border x:Name="uBorder"       BorderThickness="{Binding CellBorder.BorderThickness,Mode=OneWay}"  BorderBrush="{Binding CellBorder.BorderBrush,Mode=OneWay}" Background="{Binding CellBackground,Mode=OneWay}"
                    CornerRadius="{Binding CellBorder.CornerRadius,Mode=OneWay}" Padding="{Binding CellPadding,Mode=OneWay}"  Margin="{Binding CellMargin,Mode=OneWay}">

        <TextBlock FontFamily="{Binding ContentFont.FontFamily,Mode=OneWay}" x:Name="uTextBlock" Background="{x:Null}"
               FontSize="{Binding ContentFont.FontSize,Mode=OneWay}" FontStyle="{Binding FontStyle,Mode=OneWay}" Foreground="{Binding ContentFont.FontColor,Mode=OneWay}"       
                HorizontalAlignment="{Binding CellHorizontalAlignment,Mode=OneWay}"
           VerticalAlignment="{Binding CellVerticalAlignment,Mode=OneWay}"  >

        </TextBlock>
    </Border>
</UserControl>
