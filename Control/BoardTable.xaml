<UserControl x:Class="BoardDesigner.UControl.BoardTable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:BoardDesigner.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <converter:SetterValueConvert x:Key="SetterValueConvert"></converter:SetterValueConvert>
    </UserControl.Resources>

    <DataGrid x:Name="uGrid"                   
                  AlternatingRowBackground="{Binding AlternatingRowBackground}" AlternationCount="{Binding AlternationCount}" ColumnWidth="*"
                  CanUserReorderColumns="{Binding CanUserReorderColumns}" CanUserResizeColumns="{Binding CanUserResizeColumns}" CanUserSortColumns="{Binding CanUserSortColumns}"
                  IsReadOnly="{Binding IsReadOnly}" HeadersVisibility="{Binding HeadersVisibility}" AutoGenerateColumns="{Binding AutoGenerateColumns}" 
                  >
        </DataGrid>
</UserControl>
