<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:base="clr-namespace:BoardDesigner.Base">
    <base:ToolBox x:Key="ChartToolBox"
               DefaultItemSize="25,25">
        <ItemsControl.Items>          
            <Image IsHitTestVisible="False" x:Name="Table"
                   Stretch="Fill"
                   Source="\Resources\Images\table 24X24.png" />
            <Image IsHitTestVisible="False" x:Name="LineChart"
                   Stretch="Fill"
                   Source="\Resources\Images\linechart 24X24.png" />
            <Image IsHitTestVisible="False" x:Name="SpLineChart"
                   Stretch="Fill"
                   Source="\Resources\Images\splinechart 24X24.png" />
            <Image IsHitTestVisible="False" x:Name="ColumnChart"
                   Stretch="Fill"
                   Source="\Resources\Images\columnchart 24X24.png" />
            <Image IsHitTestVisible="False" x:Name="PieChart"
                   Stretch="Fill"
                   Source="\Resources\Images\piechart 24X24.png" />
            <Image IsHitTestVisible="False" x:Name="AreaChart"
                   Stretch="Fill"
                   Source="\Resources\Images\areachart 24X24.png" />

        </ItemsControl.Items>
    </base:ToolBox>
</ResourceDictionary>